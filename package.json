{
  "name": "drawing-contest",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:api": "pnpm --filter @drawing-contest/api dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\"",
    "build": "next build",
    "build:api": "pnpm --filter @drawing-contest/api build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "cloudinary": "^2.7.0",
  "emoji-picker-react": "^4.9.0",
    "next": "15.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "concurrently": "^8.2.1"
  }
